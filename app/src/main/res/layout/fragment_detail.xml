<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.biloc.biloc.DetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="505dp"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cityText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="St-Imier"
            android:textColor="@color/colorblack"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stationNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text="PTSI"
            android:textColor="@color/colorblack"
            android:textSize="30sp"
            android:textStyle="bold" />

        <View
            android:layout_width="320dp"
            android:layout_height="5px"
            android:layout_gravity="center_horizontal"
            android:background="#FFFFFF" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@mipmap/ic_bikeicon" />


        <TextView
            android:id="@+id/numberBikeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="8 / 12"
            android:textColor="@color/colorblack"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/distanceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:text="2 km"
            android:textColor="@color/colorblack"
            android:textSize="30sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_gravity="center_horizontal"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/addFavoritesButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorblack"
            android:drawableLeft="@mipmap/ic_favorties2"
            android:gravity="center|center_vertical"
            android:text="Add to favorites"
            android:textColor="@android:color/background_light" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_gravity="center_horizontal"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/mapButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorblack"
            android:drawableLeft="@mipmap/ic_position"
            android:gravity="center|center_vertical"
            android:text="Show station on map"
            android:textColor="@android:color/background_light" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_gravity="center_horizontal"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/navigationButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorblack"
            android:drawableLeft="@mipmap/ic_navigation"
            android:gravity="center|center_vertical"
            android:text="Navigation"
            android:textColor="@android:color/background_light" />

    </LinearLayout>


</FrameLayout>
